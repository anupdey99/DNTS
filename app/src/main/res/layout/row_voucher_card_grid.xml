<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="178dp"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    android:layout_margin="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_favourite"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:elevation="2dp"
            />

        <ImageView
            android:id="@+id/deal_card_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/ic_voucher"
            android:scaleType="fitXY"

            />
        <TextView
            android:id="@+id/deal_card_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="2315"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_below="@id/deal_card_img"
            />
        <TextView
            android:id="@+id/deal_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Deal Title Deal Title Deal Title Deal Title Deal Title"
            android:textSize="14sp"
            android:padding="2dp"
            android:maxLines="2"
            android:layout_below="@id/deal_card_price"

            />


    </RelativeLayout>




</android.support.v7.widget.CardView>