<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardElevation="1dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/deal_card_list_img"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_voucher"
            android:scaleType="fitXY"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favourite"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:elevation="2dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/deal_card_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Deal Title Deal Title Deal Title Deal Title Deal Title"
                    android:textSize="14sp"
                    android:padding="2dp"
                    android:maxLines="2"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/deal_card_list_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="2315"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:layout_below="@id/deal_card_list_title"

                    />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>